@model int

<td style="width: 150px">
    <div class="btn-group" role="group">
        <a asp-action="Edit" asp-route-Id="@Model" class="btn btn-outline-success btn-sm border-0 rounded-0">
            <i class="fas fa-edit"></i>
        </a>

        <a asp-action="Details" asp-route-Id="@Model" class="btn btn-outline-info btn-sm border-0 rounded-0">
            <i class="fas fa-eye"></i>
        </a>

        <a asp-action="Delete" asp-route-Id="@Model" class="btn btn-outline-danger btn-sm border-0 rounded-0">
            <i class="fas fa-trash-alt"></i>
        </a>
    </div>
</td>