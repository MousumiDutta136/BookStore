@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category Home";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="border bg_White">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">All Book Categories</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div>
                @if (Model.Count() > 0)
                {
                    <table class="table table-borderless border">
                        <tr class="table-active">
                            <th>
                                @Html.DisplayNameFor(m => m.Name)
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                        @foreach (var cat in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => cat.Name)
                                </td>
                                <td>
                                   <partial name="_TableButtonPartial" model="cat.Id"/>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p class="card">
                        <i>Category Not Found... Try Use the Create Button to Add New Category...</i>
                    </p>
                }
            </div>
        </div>
    </div>
</div>

